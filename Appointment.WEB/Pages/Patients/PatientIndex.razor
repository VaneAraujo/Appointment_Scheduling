@page "/patients"
@using Appointment.WEB.Repositories;
@using Appointment.WEB.Shared;
@using Appointment.Shared.Entities;
@inject SweetAlertService swal;
@inject IRepository repository

<h3>Pacientes</h3>

<div class="mb-3">
    <a class="btn btn-primary" href="/patients/create">Nuevo paciente</a>
</div>


<GenericList MyList="Patients">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Paciente</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Patients!)
                {
                    <tr>
                        <td>
                           
                            <a href="/countries/edit/@patient.Id" class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(patient))>Borrar</button>

                        </td>
                        <td>
                            @patient.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {
    public List<Patient>? Patients { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Patient>>("api/patients");
        Patients = responseHppt.Response!;
    }

    private async Task Delete(Patient patient)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/pateints/{patient.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessageAsync();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }
}
